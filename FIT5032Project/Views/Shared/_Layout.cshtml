@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Timeistic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button class="btn p-0" onclick="location.href='@Url.Action("Index", "Home")'">
                <img src="~/Images/Timeistic-logo-white-text.png" style="height:70%; width:70%;" />
            </button>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">
                    @if (Request.IsAuthenticated)
                    {

                        if (User.IsInRole("User"))
                        {
                            <li class="nav-item">@Html.ActionLink("Tracker", "Index", "Tracker", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Calendar", "Index", "Calendar", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Event", "Index", "Events", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Report", "Index", "Report", null, new { @class = "nav-link" })</li>

                        }
                        else if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">@Html.ActionLink("Manage Users", "ManageUsers", "Admin", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Email", "Email", "Admin", null, new { @class = "nav-link" })</li>

                        }
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Timeistic</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
